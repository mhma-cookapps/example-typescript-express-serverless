{
  "compilerOptions": {
    "lib": ["es2017"],
    "target": "es2017",
    "module": "commonjs",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "build",
    "plugins": [
      { "name": "typescript-tslint-plugin" }
    ]
  },
  "include": [
    "api"
  ],
  "exclude": [
    "node_modules"
  ]
}
